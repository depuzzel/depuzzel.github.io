extends master

include includes/mixins.pug

mixin loco(name, picture, link)
    div.col-sm-6.col-md-3
        div.card.card-inverse.img-filter.text-center.home-card
            img(src=picture)
            div.card-img-overlay
                p.text.card-info #{name}
                a.btn.btn-default.btn-block.home-btn(href=link) Lees meer

